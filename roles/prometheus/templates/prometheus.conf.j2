global:
  scrape_interval: 15s


scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'consul'
      consul_sd_configs:
        - server: 
        {% for host in groups['consul_agent'] %}
          - '{{ host }}:8500'
        {% endfor %}
      relabel_configs:
        - source_labels: [__meta_consul_tags]
          regex: .*,prometheus,.*
          action: keep
        - source_labels: [__meta_consul_service]
          target_label: job
  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets:
      {% for host in groups['node_exporter'] %}
        - '{{ host }}:9100'
      {% endfor %}